<% layout ('layouts/boilerplate.ejs')  %> 
    <div class="col-lg-6 offset-lg-3">
        <h1>Upravit sekci</h1> 

        <form class="row g-3 needs-validation mt-3" novalidate action="/category/<%= section.category %>/editSection/<%=section._id%>?_method=PUT" method="POST">
            <div class="mt-2">
                <label for="name" class="form-label">Název</label>
                <input type="text" name="name" id="name" class="form-control" value="<%= section.name %>" required></input>
                <div class="valid-feedback">
                    V pořádku!
                </div>
            </div>
            <div class="mt-2">
                <label for="desc" class="form-label">Popis</label>
                <input type="text" name="desc" id="desc" class="form-control" value="<%= section.shortDescription %>"></input>
            </div>
            <div class="col-12">
                <button class="btn btn-danger btn-sm" type="submit">Uložit</button>
            </div>
        </form>
    </div>
    
    <script src="/js/validateForms.js"></script>