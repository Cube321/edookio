<% layout ('layouts/boilerplate.ejs')  %> 
<div class="container forms-background d-flex justify-content-center align-items-center mt-1 mb-5">
    <div class="row">
        <div class="d-flex justify-content-center align-items-center" style="max-width:330px;">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                        <h3 class="mb-3 mt-2">Přihlášení</h3>
                    </div>
                    <!--
                    <div class="text-center mt-3">
                        <a class="btn btn-outline-danger w-100 mt-2" href="/auth/google">
                        <i class="fab fa-google me-1"></i> Přihlásit se přes Google
                        </a>
                    </div>
                    <div class="text-center my-2">
                        <span class="text-muted"><small>nebo</small></span>
                    </div>
                    -->
                    <form class="row g-3 needs-validation mt-1" novalidate action="/auth/user/login" method="POST">
                        <div class="mt-1">
                            <input type="email" class="form-control" id="username" name="username" placeholder="E-mail" autofocus required>
                        </div>
                        <div class="mt-3">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Heslo" required>
                        </div>
                        <div class="">
                            <button class="btn btn-danger btn-lg w-100 mt-3" id="submit-login" type="submit">Přihlásit se</button>
                        </div>
                        <div class="text-center">
                            <a href="/auth/user/requestPassword" class="text-muted"><small>Zapomenuté heslo</small></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
    
    
<script src="/js/validateForms.js"></script>