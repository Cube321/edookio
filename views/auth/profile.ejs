<% layout ('layouts/boilerplate.ejs')  %> 
<div class="container">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="card">
                <div class="row p-3">
                    <div class="col-12">
                        <h3>Můj účet</h3>
                    </div>
                </div>
                <div class="row p-3">
                    <div class="col-4 mb-3 fw-bold">
                        <p>Jméno</p>
                    </div>
                    <div class="col-8 mb-3">
                        <%= user.firstname %> <%= user.lastname %> 
                    </div>
                    <div class="col-4 mb-3 fw-bold">
                        <p>E-mail</p>
                    </div>
                    <div class="col-8 mb-3">
                        <%= user.email %> 
                    </div>
                    <div class="col-4 mb-3 fw-bold">
                        <p>Počet nastudovaných kartiček</p>
                    </div>
                    <div class="col-8 mb-3">
                        <%= user.cardsSeen %> 
                    </div>
                    <div class="col-4 mb-3 fw-bold">
                        <p>Datum registrace</p>
                    </div>
                    <div class="col-8 mb-3">
                        <%= user.dateOfRegistration %> 
                    </div>
                    <div class="col-4 mb-3 fw-bold">
                        <p>Heslo</p>
                    </div>
                    <div class="col-8">
                        <a href="/auth/user/changePassword" class="btn btn-danger btn-sm">Změnit heslo</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="card mt-3">
                <div class="row p-3">
                    <div class="col-12">
                        <h3>Přejít na Premium</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <input type="radio" id="monthly" name="product" value="monthly" />
                        <label for="monthly">99 Kč měsíčně</label><br />
                        <input type="radio" id="yearly" name="product" value="yearly" />
                        <label for="yearly">990 Kč ročně</label><br />

                        <button class="btn btn-primary" id="checkout-button" type="submit">
                        Koupit
                        </button>
                        <button id="manage-billing-button" type="submit">
                            Manage Billing
                          </button>
                          <input type="text" id="customerID" name="customerID" value="<%= user.billingId %>" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/jquery.min.js" ></script>
<script type="text/javascript" src="https://js.stripe.com/v3/"></script>
<script type="text/javascript" src="/js/profile.js"></script>