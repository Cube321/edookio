<% layout ('layouts/boilerplate.ejs')  %> 
<div class="container d-flex justify-content-center align-items-center mt-1 mb-5">
    <div class="row">
        <div class="d-flex justify-content-center align-items-center" style="max-width:330px;">
            <div class="card shadow">
                <div class="card-body">
                <div class="text-center">
                    <h3 class="mb-3 mt-2">Registrace</h3>
                </div>
                <% if (requiresPremium) { %>
                    <form class="row g-3 needs-validation mt-1" novalidate action="/auth/user/new?requiresPremium=true" method="POST">
                <% } else { %>
                <form class="row g-3 needs-validation mt-1" novalidate action="/auth/user/new" method="POST">
                <% } %> 
                    <div class="mt-2">
                        <input type="text" class="form-control form-control-sm" id="firstname" name="firstname" placeholder="Jméno" required>
                    </div>
                    <div class="mt-3">
                        <input type="text" class="form-control form-control-sm" id="lastname" name="lastname" placeholder="Příjmení" required>
                    </div>
                    <div class="mt-3">
                        <input type="email" class="form-control form-control-sm" id="email" name="email" placeholder="E-mail" required>
                    </div>
                    <div class="mt-3">
                        <input type="password" class="form-control form-control-sm" id="password" name="password" placeholder="Heslo" minlength=6 required>
                        <div class="invalid-feedback">
                            Heslo musí obsahovat nejméně 6 znaků.
                        </div>
                    </div>
                    <div class="mt-3">
                        <input type="password" class="form-control form-control-sm" id="password_confirmation" name="password_confirmation" placeholder="Heslo pro kontrolu" minlength=6 required>
                        <div class="invalid-feedback">
                            Heslo musí obsahovat nejméně 6 znaků.
                        </div>
                    </div>
                    <div>
                        <select class="form-select form-select-sm" name="faculty" id="faculty">
                            <option selected value="Neuvedeno">Zvolte fakultu (nepovinné)</option>
                            <option value="PrF UP">PrF UP</option>
                            <option value="PrF UK">PrF UK</option>
                            <option value="PrF MUNI">PrF MUNI</option>
                            <option value="PrF ZČU">PrF ZČU</option>
                            <option value="Jiná">Jiná</option>
                            <option value="Nestuduji">Již nestuduji</option>
                          </select>
                    </div>


                    <div class="mt-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="vop" id="vop" required>
                            <label class="form-check-label text-small registration-gdpr" for="vop">
                                Souhlasím se <a href="/legal/vop" target="_blank">všeobecnými obchodními podmínkami</a>
                            </label>
                        </div>
                    </div>
                    <div class="mt-0">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="gdpr" id="gdpr" required>
                            <label class="form-check-label text-small registration-gdpr" for="gdpr">
                                Beru na vědomí <a href="/legal/gdpr" target="_blank">podmínky zpracování osobních údajů</a>
                            </label>
                        </div>
                    </div>
                    
                    <div>
                    <button class="btn btn-lg btn-danger w-100 mt-3" type="submit">Zaregistrovat</button>
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>
</div>
    
    <script src="/js/validateForms.js"></script>