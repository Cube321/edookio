<% layout ('layouts/boilerplate.ejs')  %> 
<div class="container">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <div class="text-center">
                        <h4 class="mb-3 mt-2">Zapomenuté heslo</h4>
                    </div>
                    <form class="row g-3 needs-validation mt-1" novalidate action="/auth/user/requestPassword" method="POST">
                        <div class="mt-3">
                            <label for="email" class="form-label">Zadejte váš e-mail</label>
                            <input type="email" class="form-control form-control-sm" id="email" name="email" required>
                        </div>
                        <div class="">
                            <button class="btn btn-danger w-100 mt-3" type="submit">Obnovit heslo</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
    
    
<script src="/js/validateForms.js"></script>