<% layout ('layouts/boilerplate.ejs')  %> 
<div class="container">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <div class="text-center">
                        <h4 class="mb-3 mt-2">Změna hesla</h4>
                    </div>
                    <form class="row g-3 needs-validation mt-1" novalidate action="/auth/user/changePassword" method="POST">
                        <div class="mt-1">
                            <div class="mt-3">
                                <label for="oldpassword" class="form-label">Staré heslo</label>
                                <input type="password" class="form-control form-control-sm" id="oldpassword" name="oldpassword" required>
                            </div>
                        <div class="mt-3">
                            <label for="newpassword" class="form-label">Nové heslo</label>
                            <input type="password" class="form-control form-control-sm" id="newpassword" name="newpassword" minlength=6 required>
                            <div class="invalid-feedback">
                                Heslo musí obsahovat nejméně 6 znaků.
                            </div>
                        </div>
                        <div class="mt-3">
                            <label for="newpasswordcheck" class="form-label">Nové heslo pro kontrolu</label>
                            <input type="password" class="form-control form-control-sm" id="newpasswordcheck" name="newpasswordcheck" minlength=6 required>
                            <div class="invalid-feedback">
                                Heslo musí obsahovat nejméně 6 znaků.
                            </div>
                        </div>
                        <div class="">
                            <button class="btn btn-danger w-100 mt-3" type="submit">Uložit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
    
    
<script src="/js/validateForms.js"></script>