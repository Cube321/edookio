<% layout ('layouts/boilerplate.ejs')  %> 
<div class="container">
    <div class="row">
        <div class="col-11 offset-1 mb-3">
            <h5>Mobilní notifikace</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-7 offset-1 mb3">
            <form action="/notifications/broadcastNotifications" method="POST">
                <div class="form-group">
                    <label for="title">Nadpis</label>
                    <input type="text" class="form-control form-borders" id="title" name="title" required />
                </div>
                <div class="form-group">
                    <label for="body">Text</label>
                    <input type="text" class="form-control form-borders" id="body" name="body" required />
                </div>
                <div class="form-check mt-3">
                    <input class="form-check-input" type="radio" name="groupChoice" id="radioAll" value="radioAll" checked>
                    <label class="form-check-label" for="radioAll">
                    Zaslat všem uživatelům
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="groupChoice" id="radioFree" value="radioFree">
                    <label class="form-check-label" for="radioFree">
                    Zaslat všem Free uživatelům
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="groupChoice" id="radioPremium" value="radioPremium">
                    <label class="form-check-label" for="radioPremium">
                    Zaslat všem Premium uživatelům
                    </label>
                </div>
                <button class="btn btn-danger mt-3">Odeslat notifikace</button>
            </form>
        </div>
    </div>
</div>