<% layout ('layouts/boilerplate.ejs')  %> 
<div class="container">
    <div class="row">
        <div class="offset-1 col-md-10 mb-3 pt-3 card">
            <h5 class="mb-3">Statistiky</h5>
            <div class="row">
                <div class="col-md-4">
                    <p>Počet registrovaných uživatelů</p>
                </div>
                <div class="col-md-1">
                    <%= registeredUsersCount %>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <p>Počet Premium uživatelů</p>
                </div>
                <div class="col-md-1">
                    <%= premiumUsersCount %>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <p>Uživatelé aktivní v posledním týdnu</p>
                </div>
                <div class="col-md-1">
                    X
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <p>Aktivováno Premium v posledním týdnu</p>
                </div>
                <div class="col-md-1">
                    X
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <p>Deaktivováno Premium v posledním týdnu</p>
                </div>
                <div class="col-md-1">
                    X
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-11 offset-1 mb-3">
            <h5>Registrovaní uživatelé</h5>
        </div>
    </div>
    <% for(let user of users){ %> 
        <div class="row">
            <div class="col-sm-2 offset-1"><%= user.email %> </div>
            <div class="col-sm-2"><%= user.updatedDateOfRegistration %> </div>
            <div class="col-sm-1"><%= user.cardsSeen %></div>
            <% if(user.isPremium){ %> 
                <div class="col-sm-1">Premium</div>
            <% } else { %>
                <div class="col-sm-1">-</div>
            <% } %>
            <div class="col-sm-2"><a href="/admin/<%=user._id%>/upgradeToPremium">Upgrade to premium</a></div>
            <div class="col-sm-2">
                <form action="/admin/<%= user._id %>/deleteUser?_method=DELETE" method="POST"><button class="btn btn-sm btn-warning">Odstranit uživatele</button></form>
            </div>
            <hr>
        </div>
    <% } %> 
</div>