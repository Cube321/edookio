<% layout ('layouts/boilerplate.ejs')  %> 
<div class="container">
    <div class="row">
        <div class="col-11 offset-1 mb-3">
            <h5>Nahlášené chyby</h5>
        </div>
    </div>
    <% for(let card of cards){ %> 
        <div class="row">
            <div class="col-sm-2 offset-1"><%- card.pageA %> </div>
            <div class="col-sm-4"><%- card.pageB %> </div>
            <div class="col-sm-5">
                <% for(let report of card.factualMistakeReports){ %>
                    <% if (!report.solved) { %>
                        <div class="card my-2 p-2 d-flex flex-row justify-content-between align-items-center">
                            <p class="mb-0"><%= report.reportMsg %></p>
                            <a href="/cards/report/solved/<%= card._id %>/<%= report.user %>" class="btn btn-sm btn-outline-danger">Označit jako vyřešené</a>
                        </div>
                    <% } %>  
                    <% if (report.solved) { %>
                        <div class="card my-2 p-2 color-1 d-flex flex-row justify-content-end align-items-center">
                            <p class="mb-0"><i class="far fa-check-circle"></i> Vyřešeno</p>
                        </div>
                    <% } %>  
                <% } %> 
            </div>
            <hr>
        </div>
    <% } %> 
</div>