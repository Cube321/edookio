<% layout ('layouts/boilerplate.ejs')  %> 
<div class="container">
    <div class="row">
        <div class="col-11 offset-1 mb-3">
            <h5>Správa kategorií</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 border p-3">
            <h5 class="mb-3">Upravit kategorii</h5>
            <form action="/category/edit/<%= category._id %>?_method=PUT" method="POST">
                <div class="form-group mb-4">
                    <label for="text">Název kategorie</label>
                    <input class="form-control" id="text" name="text" rows="1" value="<%= category.text %>" required></input>
                </div>
                <div class="form-group">
                    <label for="icon">Ikona</label>
                    <input class="form-control" id="icon" name="icon" rows="1" value="<%= category.icon %>" required></input>
                </div>
                <button class="btn btn-danger mt-5">Uložit změny</button>
            </form>
        </div>
    </div>
</div>