<% layout ('layouts/boilerplate.ejs')  %> 
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="text-center">
                        <h4 class="mb-3 mt-2">Nahlásit chybu v otázce</h4>
                        <p class="">Objevil/a jsi v otázce formální nebo faktickou chybu? Dej nám vědět a my se na to podíváme.</p>
                    </div>
                    <div class="card p-3 text-small mt-4">
                        <div>
                            <p><strong>Otázka</strong></p>
                            <p><%= question.question %></p>
                        </div>
                        <hr />
                        <div>
                            <p><strong>Odpovědi</strong></p>
                            <p class="text-bold"><%= question.correctAnswers[0] %></p>
                            <p><%= question.wrongAnswers[0] %></p>
                            <p><%= question.wrongAnswers[1] %></p>
                        </div>
                    </div>
                    <form class="row g-3 mt-1" action="/category/<%= question.category %>/section/<%= question.section %>/questions/<%= question._id %>/reportMistake" method="POST">
                        <div class="mt-3">
                            <label for="reportMsg" class="form-label">Popis chyby</label>
                            <textarea class="form-control" style="border:1px solid #DFDFDF;border-radius: 5px" name="reportMsg" id="reportMsg" rows="8" required></textarea>
                        </div>
                        <div class="">
                            <button class="btn btn-danger w-100 mt-3" type="submit">Odeslat</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>