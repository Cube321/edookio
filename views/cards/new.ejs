<% layout ('layouts/boilerplate.ejs')  %> 
    <div class="col-lg-6 offset-lg-3">
        <h4 class="text-center">Vložit novou kartičku</h4>
        <p class="text-center">do balíčku <%= sectionName %> <span class="text-muted">(<%= category %>)</span></p>
        <form class="row g-3 needs-validation mt-3" novalidate action="/category/<%= category %>/section/<%= sectionId %>/newCard" method="POST">
            <div class="mt-2">
            <label for="pageA" class="form-label text-bold">Přední strana</label>
            <textarea name="pageA" id="pageA" class="form-control form-borders" cols="30" rows="4" required></textarea>
            <div class="valid-feedback">
                V pořádku!
            </div>
            </div>
            <div class="mt-4">
                <label for="pageB" class="form-label text-bold">Zadní strana</label>
                <textarea name="pageB" id="pageB" class="form-control form-borders" cols="30" rows="8" required></textarea>
                <div class="valid-feedback">
                V pořádku!
                </div>
            </div>
            <div class="col-12 mb-4">
            <button class="btn btn-danger btn-sm" type="submit">Vložit kartičku</button>
            <a href="/category/<%= category %>/section/<%= sectionId %>/listAllCards" class="btn btn-sm btn-outline-danger">Všechny kartičky v balíčku</a>
            <a href="/category/<%= category %>" class="btn btn-sm btn-outline-danger">Zpět na předmět</a>
            </div>
        </form>
    </div>
    
    <script src="/js/validateForms.js"></script>