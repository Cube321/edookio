<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>InLege</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/bootstrap_customised.css">
    <link rel="stylesheet" href="/css/custom.css">
    <link rel="stylesheet" href="/css/card.css">
</head>

  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-NNQ2L4K9C9"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-NNQ2L4K9C9');
  </script>

<body class="d-flex flex-column vh-100 bg-light">
    <%- include('../partials/navbar') %> 
    <nav class="navbar bg-white shadow">
      <div class="container">
          <ul class="navbar-nav">
              <li><a href="/category/<%= card.category %>" class="back-link"><i class="fas fa-chevron-left me-2 mb-2"></i>Zpět na kategorii</a></li>
              <li><p class="m-0"><small><%= sectionName %></p></small></li>
          </ul>
      </div>
    </nav>
    <main class="container mt-5">
        <div class="row">
          <div class="col-lg-5 offset-lg-2 mb-3">
            <div class="">
              <div id="card" class="flashcard"> 
                <div class="card front text-center shadow">  
                  <div class="card-body d-block">
                    <div class="d-flex justify-content-center align-items-center min-height-300px">
                      <div class="card-text pageA m-4" id="pageA"><%- card.pageA %> </div>
                    </div>
                  </div>
                  <div class="card-footer d-flex justify-content-center">
                    <a href="#" class="btn btn-outline-danger" id='btn-flip-front'>Otočit</a>
                  </div>
                </div> 
                <div class="card back shadow invisible" id="back">
                  <div class="card-body">
                    <div class="d-flex flex-column d-flex justify-content-center align-items-center min-height-300px">
                      <div class="card-text m-4" id="pageB"><%- card.pageB %> </div>
                    </div>
                  </div>
                  <div class="card-footer d-flex justify-content-center">
                    <!--<a href="#" class="btn btn-outline-primary" id='btn-flip-back'>Otočit!</a>-->
                    <div>
                      <a href="/category/<%=card.category%>/section/<%=card.section%>/<%= nextNum %>" class="btn btn-danger easy-btn" >Další</a>
                    </div>
                  </div>
                </div> 
              </div>
              <div class="text-center mt-4 servis-btns d-flex justify-content-center align-items-center">
                <% if (currentUser && currentUser.admin) { %>
                  <a href="/cards/edit/<%= card._id%>" class="text-muted">Upravit kartu</a>
                  <a href="/cards/remove/<%= card._id%>" class="text-muted mx-3">Odstranit kartu</a>
                <% } %>
                  <a href="#" class="text-muted">Nahlásit chybu</a>
              </div>
            </div>
          </div>
          <div class="col-lg-2 mb-3">
            <div class="card shadow">
              <div class="card-body text-center">
                <h6><%= sectionName %> </h6>
                <p class="text-muted">Karta <%= nextNum - 1 %> z <%= sectionLength %></p>
              </div>
            </div>
          </div>
        </div>
    </main>
    <%- include('../partials/footer') %> 
    <!-- JS for Bootstrap -->
    <script src="/js/jquery.min.js" ></script>
    <script src="https://kit.fontawesome.com/c9f8e59b45.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script> 
    <script src="/js/jquery.flip.min.js" ></script>
    <script src="/js/flip.custom.js" ></script>
  </body>
</html>