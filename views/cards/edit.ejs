<% layout ('layouts/boilerplate.ejs')  %> 
    <div class="col-sm-6 offset-sm-3">
        <h1>Upravit kartu</h1> 

        <form class="row g-3 needs-validation mt-3" novalidate action="/cards/edit/<%=card._id%>?_method=PUT" method="POST">
            <div class="mt-2">
            <label for="pageA" class="form-label">Strana A</label>
            <input type="text" class="form-control" id="pageA" name="pageA" value="<%=card.pageA%>" required>
            <div class="valid-feedback">
                V pořádku!
            </div>
            </div>
            <div class="mt-2">
                <label for="pageB" class="form-label">Strana B</label>
                <input type="text" class="form-control" id="pageB" name="pageB" value="<%=card.pageB%>" required>
                <div class="valid-feedback">
                V pořádku!
                </div>
            </div>
            <div class="mt-2">
                <label for="author" class="form-label">Autor</label>
                <input type="text" class="form-control" id="author" name="author" value="<%=card.author%>" required>
                <div class="valid-feedback">
                V pořádku!
                </div>
            </div>
            <div class="mt-2">
            <label for="topic" class="form-label">Kategorie</label>
            <select class="form-select" name="topic" id="topic" required>
                <% for( let cat of categories) { %>
                    <option value="<%= cat.value %>" <%= (card.topic === cat.value) ? "selected" : "" %> ><%= cat.text %></option>
                <% } %>
            </select>
            <div class="invalid-feedback">
                Zvolte kategorii.
            </div>
            </div>
            <div class="col-12">
            <button class="btn btn-primary" type="submit">Vložit</button>
            </div>
        </form>
    </div>
    
    <script src="/js/validateForms.js"></script>