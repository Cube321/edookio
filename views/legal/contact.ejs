                            <div class="col-4 fw-bold">
                                <p>IČO</p>
                            </div>
                            <div class="col-8">
                                <p>08900230</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-3 mt-lg-0">
                    <div class="card profile-card">
                        <div class="p-3">
                            <h5>Kontaktní formulář</h5>
                            <form action="/legal/contactForm" method="POST">
                                <div class="form-group mb-3">
                                    <input type="text" class="form-control form-borders mt-2" id="name" name="name" placeholder="Jméno" required>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control form-borders mt-2" id="email" name="email" placeholder="E-mail" required>
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control form-borders mt-3" id="text" name="text" rows="6" placeholder="Zpráva" required></textarea>
                                </div>
                                <div>
                                    <input type="text" name="school" style="display:none;" tabindex="-1" autocomplete="off">
                                </div>
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-danger mt-3">Odeslat zprávu</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
