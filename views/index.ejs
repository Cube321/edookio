      integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://kit.fontawesome.com/c9f8e59b45.js"
      crossorigin="anonymous"
    ></script>
    <script src="/js/jquery.min.js"></script>
    <script type="text/javascript" src="/js/cookies.js"></script>
    <script type="text/javascript" src="/js/landing.js"></script>
  </body>

  <!-- MODAL - Create section with AI -->
  <div
    class="modal fade modal-generate-ai"
    id="createWithAIModal"
    tabindex="-1"
  >
    <div class="modal-dialog modal-dialog-centered edit-modal">
      <div class="modal-content">
        <div class="modal-header" style="border: none">
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
          ></button>
        </div>
        <div class="modal-body m-2 mt-0 pt-0">
          <div class="d-flex justify-content-center mb-3">
            <img
              src="/img/icon_ai_brain.png"
              class="mb-2 mt-3 img-fluid"
              alt=""
              style="height: 72px"
            />
          </div>
          <h5 class="modal-title text-center" id="generate-modal-headline">
            Vygenerovat obsah pomocí AI
          </h5>
          <div id="document-formats-container">
            <p class="text-muted mb-1 mt-2 text-center">
              Nahrajte soubor ve formátu .docx, .pdf nebo .pptx.
            </p>
          </div>
          <form
            action="/demo/generateContent"
            id="add-section-with-ai-form"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="row mt-4">
              <div class="col-lg-12">
                <input
                  class="form-control form-borders border-darkgrey"
                  type="file"
                  id="document"
                  name="document"
                  accept=".pdf, .docx, .pptx"
                  required
                />
              </div>
            </div>
            <div class="row">
              <div class="col-12 d-flex justify-content-center mt-4">
                <button
                  class="btn btn-lg btn-danger"
                  id="add-section-with-ai-btn"
                >
                  Vygenerovat
                </button>
              </div>
            </div>
          </form>
          <div id="document-progress-container">
            <p
              class="text-muted text-center mb-2 text-smaller"
              id="expected-time"
            >
              Očekávaná doba generování je...
            </p>
            <div id="progress-bar-container">
              <div id="progress-bar"></div>
            </div>
            <p id="progress-text">Čekám na nahrání souboru...</p>
          </div>
          <div id="document-success-container" style="display: none">
            <h6 class="mt-3 text-center">Dokončeno</h6>
            <div class="d-flex justify-content-center mt-2">
              <a
                href=""
                class="btn btn-danger my-2"
                id="show-generated-content-btn"
                >Zobrazit vygenerovaný obsah</a
              >
            </div>
          </div>
          <div id="document-error-container" style="display: none">
            <h5 class="mt-1 text-center" id="document-error-headline">
              Generování selhalo
            </h5>
            <hr class="color-primary mx-5" style="height: 2px" />
            <p class="text-center" id="document-error-text"></p>
            <div class="d-flex justify-content-center mt-2">
              <button
                class="btn btn-danger my-3"
                id="retry-generate-content-btn"
              >
                Zkusit znovu
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- MODAL - shared category -->
  <% if (shareId && sharedCategory) { %>
  <div class="modal fade" id="sharedCategoryModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header" style="border: none">
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
          ></button>
        </div>
        <div class="modal-body m-2 mt-0 pt-0">
          <h5 class="modal-title text-center" id="generate-modal-headline">
            Někdo s tebou sdílí předmět
          </h5>
          <h4 class="text-center my-3"><%= sharedCategory.text %></h4>
          <p class="text-center text-muted">
            Tento předmět obsahuje <%= sharedCategory.numOfCards %> opakovacích
            kartiček a <%= sharedCategory.numOfQuestions %> testových otázek.
            Pro přístup je třeba se zaregistrovat nebo přihlásit.
          </p>

          <div
            class="mt-4 mb-2 d-flex flex-column justify-content-center align-items-center"
          >
            <a
              href="/auth/user/new?shareId=<%= shareId %>"
              class="btn btn-danger"
              >Vytvořit účet zdarma</a
            >
            <a
              href="/auth/user/login?shareId=<%= shareId %>"
              class="mt-3 text-smaller"
              >Máš účet? Přihlaš se</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      var myModal = new bootstrap.Modal(
        document.getElementById("sharedCategoryModal")
      );
      myModal.show();
    });
  </script>
  <% } %>

  <script>
    AOS.init({
      duration: 1500, // animation duration in ms
      once: true, // whether animation should happen only once - while scrolling down
    });
  </script>

  <script src="/js/document_demo.js"></script>
</html>
